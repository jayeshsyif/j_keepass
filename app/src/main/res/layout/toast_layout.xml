<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toastLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kp_toast_height"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="@dimen/kp_card_view_radius"
            android:gravity="center">

            <TextView
                android:id="@+id/toastText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="?colorOnPrimary"
                android:fontFamily="@font/spacemono_bold"
                android:gravity="center"
                android:padding="@dimen/fab_new_padding"
                android:text="@string/loading"
                android:textAlignment="center"
                android:textColor="?colorPrimary"
                android:textSize="@dimen/kp_small_text_size"></TextView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</LinearLayout>