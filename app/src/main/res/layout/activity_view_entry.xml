<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kp_grey"
    tools:context=".ViewEntryActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/kp_card_view_margin"
        android:backgroundTint="@color/kp_white"
        app:cardCornerRadius="@dimen/kp_card_view_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/entryTitleName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/kp_group_name_margin"
                android:layout_weight="80"
                android:fontFamily="@font/righteous"
                android:gravity="top"
                android:text="@string/entryName"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/kp_dark_blue"
                android:textSize="@dimen/kp_group_name_text_size"
                android:textStyle="bold"></TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@color/kp_light_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/kp_group_name_margin"
                        android:fontFamily="@font/righteous"
                        android:gravity="top"
                        android:text="@string/userName"
                        android:textAlignment="gravity"
                        android:textColor="@color/kp_dark_blue"
                        android:textSize="@dimen/kp_small_text_size"
                        android:textStyle="italic"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/entryUserName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/kp_group_name_margin"
                            android:layout_weight="20"
                            android:fontFamily="@font/righteous"
                            android:gravity="left|center"
                            android:text="@string/userName"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/kp_dark_blue"
                            android:textStyle="bold"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="80">

                            <ImageButton
                                android:id="@+id/userNameCopy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_content_copy_fill0_wght300_grad_25_opsz24"
                                android:textAlignment="gravity"
                                app:tint="@color/kp_dark_blue"></ImageButton>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/kp_group_name_margin"
                        android:fontFamily="@font/righteous"
                        android:gravity="top"
                        android:text="@string/password"
                        android:textAlignment="gravity"
                        android:textColor="@color/kp_dark_blue"
                        android:textSize="@dimen/kp_small_text_size"
                        android:textStyle="italic"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/kp_margin"
                            android:layout_weight="20"
                            app:passwordToggleEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/entryPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@android:color/transparent"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:fontFamily="@font/righteous"
                                android:inputType="textPassword"
                                android:textColor="@color/kp_dark_blue"
                                android:textColorHint="@color/kp_dark_blue"></com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="80">

                            <ImageButton
                                android:id="@+id/entryPasswordCopy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_content_copy_fill0_wght300_grad_25_opsz24"
                                android:textAlignment="gravity"
                                app:tint="@color/kp_dark_blue"></ImageButton>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/kp_group_name_margin"
                        android:fontFamily="@font/righteous"
                        android:gravity="top"
                        android:text="@string/url"
                        android:textAlignment="gravity"
                        android:textColor="@color/kp_dark_blue"
                        android:textSize="@dimen/kp_small_text_size"
                        android:textStyle="italic"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/entryUrl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/kp_group_name_margin"
                            android:layout_weight="20"
                            android:fontFamily="@font/righteous"
                            android:gravity="left|center"
                            android:text="@string/url"
                            android:textAlignment="gravity"
                            android:textColor="@color/kp_dark_blue"
                            android:textStyle="bold"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="80">

                            <ImageButton
                                android:id="@+id/entryUrlCopy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_content_copy_fill0_wght300_grad_25_opsz24"
                                android:textAlignment="gravity"
                                app:tint="@color/kp_dark_blue"></ImageButton>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/kp_group_name_margin"
                        android:fontFamily="@font/righteous"
                        android:gravity="top"
                        android:text="@string/notes"
                        android:textAlignment="gravity"
                        android:textColor="@color/kp_dark_blue"
                        android:textSize="@dimen/kp_small_text_size"
                        android:textStyle="italic"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/entryNotes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/kp_group_name_margin"
                            android:layout_weight="20"
                            android:fontFamily="@font/righteous"
                            android:gravity="left|center"
                            android:singleLine="false"
                            android:text="@string/notes"
                            android:textAlignment="gravity"
                            android:textColor="@color/kp_dark_blue"
                            android:textStyle="bold"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="80">

                            <ImageButton
                                android:id="@+id/entryNotesCopy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_content_copy_fill0_wght300_grad_25_opsz24"
                                android:textAlignment="gravity"
                                app:tint="@color/kp_dark_blue"></ImageButton>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>