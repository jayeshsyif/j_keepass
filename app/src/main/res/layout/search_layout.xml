<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/kp_card_view_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/kp_white"
        app:cardCornerRadius="@dimen/kp_card_view_radius">

        <ScrollView
            android:id="@+id/confirmScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/kp_margin"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_button_margin"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:textColorHint="@color/kp_grey"
                        app:boxStrokeColor="@color/kp_grey"
                        app:hintTextColor="@color/kp_grey"
                        app:passwordToggleEnabled="false"
                        app:passwordToggleTint="@color/kp_grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/searchText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/kp_white"
                            android:fontFamily="@font/righteous"
                            android:hint="@string/enterToSearch"
                            android:inputType="text"
                            android:textColor="@color/kp_dark_blue" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_margin"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/confirmSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/kp_button_margin"
                        android:layout_weight="1"
                        android:backgroundTint="@color/kp_light_blue"
                        android:fontFamily="@font/righteous"
                        android:text="@string/search"
                        android:textAllCaps="true"
                        android:textColor="@color/kp_dark_blue"
                        android:textStyle="bold">

                    </com.google.android.material.button.MaterialButton>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/searchCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="0pt"
            android:backgroundTint="@color/kp_red"
            android:contentDescription="@android:string/cancel"
            app:borderWidth="@dimen/kp_always_0"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_close_fill0_wght300_grad_25_opsz24"
            app:tint="@color/kp_static_white" />
    </androidx.cardview.widget.CardView>
</LinearLayout>