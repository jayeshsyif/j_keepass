<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="2"
    android:background="?colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bannerAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:fontFamily="@font/spacemono_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?colorSecondary" />

        <TextView
            android:id="@+id/bannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bannerAppName"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/kp_always_1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/spacemono_regular"
            android:gravity="center"
            android:text="@string/app_desc"
            android:textAlignment="center"
            android:textColor="?colorSecondary"
            android:textSize="@dimen/kp_small_text_size" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/kp_load_loading_icon"
            android:layout_height="@dimen/kp_load_loading_icon"
            android:layout_margin="@dimen/kp_load_loading_icon"
            android:layout_below="@id/bannerText"
            android:layout_centerInParent="true"
            android:indeterminateTint="?colorOnPrimary">

        </ProgressBar>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>