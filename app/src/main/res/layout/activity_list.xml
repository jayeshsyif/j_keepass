<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kp_grey"
    tools:context=".ListActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/kp_card_view_margin"
        android:backgroundTint="@color/kp_white"
        app:cardCornerRadius="@dimen/kp_card_view_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/groupName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/kp_group_name_margin"
                android:layout_weight="80"
                android:fontFamily="@font/righteous"
                android:gravity="top"
                android:text="@string/groupName"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/kp_dark_blue"
                android:textSize="@dimen/kp_group_name_text_size"
                android:textStyle="bold"></TextView>

            <ListView
                android:id="@+id/groupListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"></ListView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floatAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="@dimen/fab_new_margin"
            android:backgroundTint="@color/kp_dark_blue"
            android:text="@string/menuText"
            android:textColor="@color/kp_white"
            app:icon="@drawable/ic_menu_fill0_wght300_grad_25_opsz24"
            app:iconTint="@color/kp_white"
            app:tint="@color/kp_white" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>