<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kp_whitesh_grey">


    <androidx.cardview.widget.CardView
        android:id="@+id/databaseNameCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/kp_card_list_view_margin"
        android:background="@color/kp_whitesh_grey"
        app:cardCornerRadius="2pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kp_whitesh_grey"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/databaseNameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_color_style"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_database_fill0_wght300_grad_25_opsz24"
                        android:textAlignment="center"
                        app:tint="@color/kp_dark_blue" />

                </LinearLayout>

                <TextView
                    android:id="@+id/databaseName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_margin"
                    android:layout_weight="20"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:gravity="center_vertical"
                    android:text="@string/groupName"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/kp_dark_blue">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageButton
                        android:id="@+id/databaseMoreOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_more_hori_fill0_wght300_grad_25_opsz24"
                        app:tint="@color/kp_grey" />

                    <TextView
                        android:id="@+id/databaseMoreInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/kp_grey"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kdbxListFilePasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/kp_margin"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_margin"
                    android:layout_weight="30"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:textColorHint="@color/kp_grey"
                    app:boxStrokeColor="@color/kp_grey"
                    app:hintTextColor="@color/kp_grey"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/kp_grey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kdbxListFilePassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/kp_changing_white"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:hint="@string/enterPassword"
                        android:inputType="textPassword"
                        android:textColor="@color/kp_dark_blue" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>