<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/databaseNameCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/kp_card_list_view_margin"
        android:background="?colorPrimary"
        android:backgroundTint="?colorPrimary"
        app:cardBackgroundColor="?colorPrimary"
        android:outlineAmbientShadowColor="?colorPrimaryVariant"
        android:outlineSpotShadowColor="?colorPrimaryVariant"
        app:cardCornerRadius="@dimen/kp_card_view_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/databaseNameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_color_style"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_database_fill0_wght300_grad_25_opsz24"
                        android:textAlignment="center"
                        app:tint="?colorOnPrimary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/databaseName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_margin"
                    android:layout_weight="20"
                    android:fontFamily="@font/spacemono_regular"
                    android:gravity="center_vertical"
                    android:text="@string/groupName"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="?colorSecondary">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageButton
                        android:id="@+id/databaseMoreOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_more_hori_fill0_wght300_grad_25_opsz24"
                        app:tint="?colorSecondary" />

                    <TextView
                        android:id="@+id/databaseMoreInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/spacemono_italic"
                        android:text="modified: 24/10/24"
                        android:textSize="@dimen/kp_extra_small_text_size"
                        android:textColor="?colorOnPrimary"
                        android:layout_gravity="right"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>