<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/kp_card_view_margin"
    android:backgroundTint="@android:color/transparent"
    android:padding="@dimen/kp_card_view_padding">


    <LinearLayout
        android:id="@+id/adapterMainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kp_light_blue"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/adapterIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_folder_fill0_wght300_grad_25_opsz24"
                android:text="F"
                android:textAlignment="center"
                app:tint="@color/kp_dark_blue"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/adapterText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/kp_margin"
            android:layout_weight="20"
            android:gravity="center_vertical"
            android:text="test"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:fontFamily="@font/righteous"
            android:textSize="@dimen/kp_group_list_text_size"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/editGroupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/kp_button_margin"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_edit_fill0_wght300_grad_25_opsz24"
                android:textStyle="bold"
                app:tint="@color/kp_dark_blue"></ImageButton>

            <ImageButton
                android:id="@+id/deleteGroupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/kp_button_margin"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_delete_fill0_wght300_grad_25_opsz24"
                android:textColor="@color/kp_dark_blue"
                android:textStyle="bold"
                app:tint="@color/kp_dark_blue"></ImageButton>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>