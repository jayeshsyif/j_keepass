<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/kp_card_view_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/kp_whitesh_grey"
        app:cardCornerRadius="@dimen/kp_card_view_radius">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_new_margin"
            android:layout_marginTop="@dimen/fab_new_margin"
            android:layout_marginBottom="@dimen/fab_new_margin"
            android:layout_marginRight="@dimen/fab_new_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/kp_margin"
                android:layout_marginRight="@dimen/kp_margin"
                android:layout_marginBottom="@dimen/kp_margin"
                android:layout_marginTop="@dimen/fab_new_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:enabled="false"
                        android:hint="@string/newPassword"
                        android:textColorHint="@color/kp_grey"
                        app:boxStrokeColor="@color/kp_grey"
                        app:hintTextColor="@color/kp_grey"
                        app:passwordToggleEnabled="false"
                        app:passwordToggleTint="@color/kp_grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/newPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/kp_whitesh_grey"
                            android:fontFamily="@font/josefin_sans_regular"
                            android:inputType="text"
                            android:textColor="@color/kp_dark_blue" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="80">

                        <ImageButton
                            android:id="@+id/newPasswordCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_content_copy_fill0_wght300_grad_25_opsz24"
                            android:textAlignment="gravity"
                            app:tint="@color/kp_dark_blue"></ImageButton>

                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/newPasswordSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/kp_margin"
                    android:foregroundTint="@color/kp_dark_blue"
                    android:value="20"
                    android:valueFrom="1"
                    android:valueTo="100"
                    app:thumbColor="@color/kp_dark_blue"
                    app:trackColor="@color/kp_light_blue"
                    app:trackColorActive="@color/kp_dark_blue">

                </com.google.android.material.slider.Slider>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/useDigit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/kp_dark_blue"
                        android:checked="true"
                        android:text="@string/useDigit"
                        android:textColor="@color/kp_dark_blue"></com.google.android.material.checkbox.MaterialCheckBox>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/useLowerCase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/kp_dark_blue"
                        android:checked="true"
                        android:text="@string/useLowerCase"
                        android:textColor="@color/kp_dark_blue"></com.google.android.material.checkbox.MaterialCheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/useUpperCase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/kp_dark_blue"
                        android:checked="true"
                        android:text="@string/useUpperCase"
                        android:textColor="@color/kp_dark_blue">

                    </com.google.android.material.checkbox.MaterialCheckBox>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/useSymbol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/kp_dark_blue"
                        android:checked="true"
                        android:text="@string/useSymbol"
                        android:textColor="@color/kp_dark_blue"></com.google.android.material.checkbox.MaterialCheckBox>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newPasswordFloatCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="0pt"
            android:backgroundTint="@color/kp_red"
            app:borderWidth="@dimen/kp_always_0"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_close_fill0_wght300_grad_25_opsz24"
            app:tint="@color/kp_static_white" />
    </androidx.cardview.widget.CardView>


</LinearLayout>