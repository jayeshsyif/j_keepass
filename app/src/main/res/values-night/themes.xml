    <style name="CustomDatePickerDialogDark" parent="ThemeOverlay.AppCompat.Dialog">
        <!-- Header background -->
        <item name="colorAccent">?colorOnPrimary</item>
        <!-- Header text color -->
        <item name="android:textColorPrimaryInverse">?colorSecondary</item>
        <!-- Body background -->
        <item name="android:windowBackground">?colorPrimaryVariant</item>
        <!-- Selected day color -->
        <item name="android:colorControlActivated">?colorOnPrimary</item>
        <!-- Days of the month -->
        <item name="android:textColorPrimary">?colorSecondary</item>
        <!-- Days of the week -->
        <item name="android:textColorSecondary">?colorSecondary</item>
        <!-- Cancel & OK buttons -->
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CancelButtonStyleDark</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/OkButtonStyleDark</item>
    </style>

    <style name="CancelButtonStyleDark" parent="@android:style/Widget.Button">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="OkButtonStyleDark" parent="@android:style/Widget.Button">
